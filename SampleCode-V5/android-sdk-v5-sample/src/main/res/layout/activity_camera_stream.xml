<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <LinearLayout
        android:id="@+id/ll_information"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_status"
            android:layout_width="@dimen/uxsdk_350_dp"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingVertical="@dimen/uxsdk_10_dp"
            android:paddingStart="@dimen/uxsdk_10_dp"
            android:background="#4D000000"
            tools:listitem="@layout/item_monitoring_status" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_message"
            android:layout_width="@dimen/uxsdk_350_dp"
            android:layout_height="match_parent"
            android:background="#4D000000"
            tools:listitem="@layout/item_message_info" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_scroll_to_bottom"
        android:layout_width="wrap_content"
        android:padding="@dimen/uxsdk_10_dp"
        android:layout_gravity="right|top"
        android:visibility="gone"
        android:src="@drawable/uxsdk_ic_arrow_down"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/ll_operations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:divider="@drawable/vertical_divider"
        android:paddingVertical="@dimen/uxsdk_10_dp">

        <Button
            android:id="@+id/btn_start_publishing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Start Publishing" />

        <Button
            android:id="@+id/btn_stop_publishing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:text="Stop Publish" />

        <Button
            android:id="@+id/btn_get_ready_to_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:text="Get Ready to remote control" />

        <Button
            android:id="@+id/btn_abort_remote_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:text="Abort Remote control" />

        <Button
            android:id="@+id/btn_land_off"
            android:text="Land Off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_control_mode"
        android:layout_width="wrap_content"
        tools:listitem="@layout/item_monitoring_status"
        android:layout_gravity="top|center"
        android:popupBackground="@color/black"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_control_scale_configuration"
        android:layout_width="wrap_content"
        tools:listitem="@layout/item_monitoring_status"
        android:layout_gravity="top|center"
        android:popupBackground="@color/black"
        android:layout_marginTop="@dimen/uxsdk_30_dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/rotation_maximum_velocity_slider"
        android:layout_width="@dimen/uxsdk_300_dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/uxsdk_60_dp"
        android:valueFrom="0"
        android:valueTo="120"
        android:value="0"
        android:stepSize="1"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btn_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="North"
            app:layout_constraintBottom_toTopOf="@+id/btn_reset"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_rotate_left"
            android:text="Rotate L"
            app:layout_constraintRight_toLeftOf="@+id/btn_forward"
            app:layout_constraintBottom_toTopOf="@+id/btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STOP"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_rotate_right"
            app:layout_constraintLeft_toRightOf="@+id/btn_forward"
            app:layout_constraintBottom_toTopOf="@+id/btn_reset"
            android:text="Rotate R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_backward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="South"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_reset" />

        <Button
            android:id="@+id/btn_rise_gimbal"
            app:layout_constraintRight_toLeftOf="@+id/btn_backward"
            app:layout_constraintTop_toTopOf="@+id/btn_backward"
            android:layout_width="wrap_content"
            android:text="Rise"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_set_gimbal"
            app:layout_constraintTop_toTopOf="@+id/btn_rise_gimbal"
            app:layout_constraintLeft_toRightOf="@+id/btn_backward"
            android:layout_width="wrap_content"
            android:text="Set"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="West"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_reset"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="East"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_reset"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>